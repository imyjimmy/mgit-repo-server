{
  "name": "mgit-repo-server",
  "version": "1.0.0",
  "description": "Git repository server with scheduling services",
  "scripts": {
    "build": "chmod +x scripts/build.sh && scripts/build.sh",
    "dev": "chmod +x scripts/dev.sh && scripts/dev.sh",
    "dev:rebuild": "chmod +x scripts/dev.sh && scripts/dev.sh Y",
    "prod": "chmod +x scripts/prod.sh && scripts/prod.sh",
    "prod:rebuild": "chmod +x scripts/prod.sh && scripts/prod.sh Y '' Y",
    "nuke": "chmod +x scripts/nuke.sh && scripts/nuke.sh",
    "stop": "docker-compose -f docker-compose.yml -f docker-compose.development.yml --env-file .env.development down",
    "stop:prod": "docker-compose -f docker-compose.yml -f docker-compose.production.yml --env-file .env.production down",
    "logs": "docker-compose -f docker-compose.yml -f docker-compose.development.yml --env-file .env.development logs -f",
    "logs:prod": "docker-compose -f docker-compose.yml -f docker-compose.production.yml --env-file .env.production logs -f"
  },
  "devDependencies": {
    "nodemon": "^3.0.0"
  }
}