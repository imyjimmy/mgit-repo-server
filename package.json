{
  "name": "mgit-repo-server",
  "version": "1.0.0",
  "description": "Simple static server for mgit repos",
  "main": "server.js",
  "scripts": {
    "build": "chmod +x scripts/build.sh && scripts/build.sh",
    "dev": "chmod +x scripts/dev.sh && scripts/dev.sh",
    "stop": "docker-compose -f docker-compose.yml -f docker-compose.development.yml down",
    "logs": "docker-compose -f docker-compose.yml -f docker-compose.development.yml logs -f",
    "start": "node server.js"
  },
  "dependencies": {
    "@getalby/sdk": "^5.1.0",
    "@noble/hashes": "^1.8.0",
    "axios": "^1.7.9",
    "bech32": "^2.0.0",
    "cors": "^2.8.5",
    "dotenv": "^17.0.1",
    "express": "^4.21.2",
    "express-rate-limit": "^7.5.0",
    "helmet": "^8.0.0",
    "jsonwebtoken": "^9.0.2",
    "mysql2": "^3.14.3",
    "node-fetch": "^3.3.2",
    "nostr-tools": "^2.10.4",
    "qrcode": "^1.5.3",
    "sqlite3": "^5.1.6",
    "ws": "^8.18.3"
  },
  "devDependencies": {
    "nodemon": "^3.1.10"
  }
}
